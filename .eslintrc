{
  "extends": "airbnb",
  "ecmaFeatures": {
    "generators": true
  },
  "rules":{
    "strict":0,
    "generator-star-spacing": [2, {"before": false, "after": true}],
    "indent": [2, 2, {"SwitchCase": 1}],
    "class-methods-use-this": ["error", { "exceptMethods": ["convertDataFields"] }],
    "global-require": 0,
    "import/no-dynamic-require": 0
  },
  "env": {
    "mocha":true,
    "node":true,
    "es6":true
  }
}
